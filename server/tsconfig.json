{
	"compilerOptions": {
		"moduleResolution": "nodenext",
		"module": "nodenext",
		"esModuleInterop": true,
		"target": "es2018",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"rootDir": "./server"
	},

	"include": ["./server/src/**/*", "./types/**/*.d.ts"]
}
