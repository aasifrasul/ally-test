{
	"compilerOptions": {
		"types": ["jest"],
		"target": "es2018",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./server",
		"typeRoots": ["./node_modules/@types", "./types"]
	},
	"include": ["./server/src/**/*", "types/**/*.d.ts"],
	"exclude": ["./node_modules"]
}
