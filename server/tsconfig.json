{
	"compilerOptions": {
		"moduleResolution": "nodenext",
		"module": "nodenext",
		"esModuleInterop": true,
		"target": "es2018",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./server",
		"typeRoots": ["./node_modules/@types", "src/types"]
	},
	"include": ["./server/src/**/*", "src/types/**/*.d.ts"],
	"exclude": ["./node_modules"]
}
