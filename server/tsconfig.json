{
	"compilerOptions": {
		"moduleResolution": "nodenext",
		"module": "nodenext",
		"esModuleInterop": true,
		"target": "es2018",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./server",
		"typeRoots": ["./node_modules/@types", "./types"]
	},
	"include": ["./server/src/**/*", "./types/*.d.ts"],
	"exclude": ["../node_modules", "../src/**/*", "../dist", "../public"]
}
