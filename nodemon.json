{
	"watch": ["server/src"],
	"ext": "ts,json",
	"ignore": [
		"**/*.test.ts",
		"**/*.spec.ts",
		"**/node_modules/**",
		"**/*.log",
		"**/dist/**",
		"**/build/**",
		"**/.git/**"
	],
	"exec": "ts-node --transpile-only server/src/index.ts",
	"env": {
		"NODE_ENV": "development",
		"TS_NODE_TRANSPILE_ONLY": "true"
	},
	"delay": "1000",
	"signal": "SIGTERM",
	"verbose": true,
	"legacyWatch": false,
	"pollingInterval": 100,
	"restartable": "rs",
	"colours": true,
	"events": {
		"restart": "echo 'ðŸ”„ Server restarting...'",
		"crash": "echo 'ðŸ’¥ Server crashed - waiting for changes...'",
		"start": "echo 'âœ… Server started successfully'"
	}
}
