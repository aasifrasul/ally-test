{
	"verbose": true,
	"watch": ["src/**", "server/**", "webpack/**"],
	"ignore": ["*.test.js", "*.bundle.js", "**/fixtures/**", "**/node_modules/**"],
	"execMap": {
		"rb": "ruby",
		"pde": "processing --sketch={{pwd}} --run"
	},
	"events": {
		"restart": "yarn build"
	},
	"delay": 1000,
	"signal": "SIGTERM",
	"ext": "js,json",
	"exec": "node --unhandled-rejections=strict server/index.js"
}
