{
	"watch": ["server/src", ".env"],
	"ext": "ts,json",
	"ignore": [
		"**/*.test.ts",
		"**/*.spec.ts",
		"**/node_modules/**",
		"**/dist/**",
		"**/build/**",
		"**/.git/**",
		"src",
		"webpack-configs"
	],
	"exec": "tsx server/src/index.ts",
	"env": {
		"NODE_ENV": "development"
	},
	"delay": "500",
	"signal": "SIGTERM",
	"verbose": true,
	"legacyWatch": false,
	"restartable": "rs",
	"colours": true,
	"events": {
		"restart": "echo 'ðŸ”„ Server restarting...'",
		"crash": "echo 'ðŸ’¥ Server crashed - waiting for changes...'",
		"start": "echo 'âœ… Server started successfully'"
	}
}
